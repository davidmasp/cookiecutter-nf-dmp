/*
 * -------------------------------------------------
 *  {{cookiecutter.project_slug}} base config file
 * -------------------------------------------------
 * A shared mode to run in all executors. Contains cpu and memory specs.
 * To use the specs in a process add the corresponding label.
 */

process {

    withLabel:cpus_5 {
        cpus = 5
    }

    withLabel:cpus_10 {
        cpus = 10
    }

    withLabel:cpus_15 {
        cpus = 15
    }

    withLabel:mem_15 {
        memory = '15 GB'
    }

    withLabel:mem_25 {
        memory = '25 GB'
    }

    withLabel:mem_50 {
        memory = '50 GB'
    }
}

